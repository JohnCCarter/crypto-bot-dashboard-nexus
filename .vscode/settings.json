{
    "python.analysis.typeCheckingMode": "basic",
    "cursor.composer.shouldAllowCustomModes": true,
    "cursor.general.gitGraphIndexing": "enabled",
    "markdown.validate.enabled": true,
    "terminal.integrated.stickyScroll.enabled": true,
    "terminal.integrated.suggest.enabled": true,
    "python.terminal.activateEnvInCurrentTerminal": true,
    "python.createEnvironment.contentButton": "hide",
    "python-envs.pythonProjects": [],
    "github.copilot.advanced": {
        "enableCopilotForChat": true,
        "enableCopilotForCodeReview": true,
        "enableCopilotForPullRequest": true,
        "enableCopilotForIssues": true,
        "enableCopilotForSearch": true,
        "enableCopilotForCodeCompletion": true   
    },
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "./backend",
        "-p",
        "*test*.py"
    ],
    "python.testing.pytestEnabled": false,
    "python.testing.unittestEnabled": true
    
}